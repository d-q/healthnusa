<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Dashboard Kanban View -->
        <record id="view_dashboard_kanban" model="ir.ui.view">
            <field name="name">healthnusa.dashboard.kanban</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_dashboard">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="specialty_id"/>
                    <field name="duty_status"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <h4><field name="name"/></h4>
                                        <span class="badge badge-pill" t-att-class="record.duty_status.value === 'on_duty' ? 'badge-success' : 'badge-secondary'">
                                            <field name="duty_status"/>
                                        </span>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <field name="specialty_id"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Dashboard Action -->
        <record id="action_healthnusa_dashboard" model="ir.actions.act_window">
            <field name="name">HealthNusa Dashboard</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_dashboard_kanban"/>
            <field name="domain">[('is_doctor', '=', True), ('duty_status', 'in', ['on_duty', 'on_call'])]</field>
            <field name="context">{
                'default_is_doctor': True,
                'dashboard_view': True
            }</field>
            <field name="limit">20</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Welcome to HealthNusa Dashboard
                </p>
                <p>
                    Your healthcare management system dashboard showing active doctors.
                </p>
                <p>
                    <a type="action" name="%(action_doctor)d" class="btn btn-primary">
                        Add Your First Doctor
                    </a>
                </p>
            </field>
        </record>

        <!-- Main HealthNusa Menu -->
        <menuitem id="menu_healthnusa_root" 
                  name="HealthNusa" 
                  web_icon="healthnusa,static/description/icon.png"
                  sequence="10"/>

        <!-- Dashboard Menu -->
        <menuitem id="menu_healthnusa_dashboard" 
                  name="Dashboard" 
                  parent="menu_healthnusa_root"
                  action="action_healthnusa_dashboard"
                  sequence="1"/>

        <!-- Doctors Menu -->
        <menuitem id="menu_healthnusa_doctors" 
                  name="Doctors" 
                  parent="menu_healthnusa_root"
                  sequence="10"/>

        <menuitem id="menu_healthnusa_doctors_list" 
                  name="All Doctors" 
                  parent="menu_healthnusa_doctors"
                  action="action_doctor"
                  sequence="1"/>

        <menuitem id="menu_healthnusa_doctors_specialties" 
                  name="Specialties" 
                  parent="menu_healthnusa_doctors"
                  action="action_doctor_specialty"
                  sequence="10"/>

        <!-- Schedules Menu -->
        <menuitem id="menu_healthnusa_schedules" 
                  name="Schedules" 
                  parent="menu_healthnusa_root"
                  action="action_doctor_schedule"
                  sequence="20"/>

        <!-- Documents Menu -->
        <menuitem id="menu_healthnusa_documents" 
                  name="Documents" 
                  parent="menu_healthnusa_root"
                  action="action_doctor_document"
                  sequence="30"/>

        <!-- Configuration Menu -->
        <menuitem id="menu_healthnusa_config" 
                  name="Configuration" 
                  parent="menu_healthnusa_root"
                  sequence="100"
                  groups="healthnusa.group_healthnusa_manager"/>

        <menuitem id="menu_healthnusa_config_specialties" 
                  name="Medical Specialties" 
                  parent="menu_healthnusa_config"
                  action="action_doctor_specialty"
                  sequence="10"/>

    </data>
</odoo>