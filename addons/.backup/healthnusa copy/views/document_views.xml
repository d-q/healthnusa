<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Document Tree View -->
        <record id="view_document_tree" model="ir.ui.view">
            <field name="name">healthnusa.document.list</field>
            <field name="model">healthnusa.doctor.document</field>
            <field name="arch" type="xml">
                <list string="Doctor Documents" create="true" edit="true" delete="true">
                    <field name="doctor_id"/>
                    <field name="name"/>
                    <field name="document_type"/>
                    <field name="filename"/>
                    <field name="file_size_display"/>
                    <field name="issue_date"/>
                    <field name="expiry_date"/>
                    <field name="is_verified" widget="boolean_toggle"/>
                    <field name="is_expired" widget="badge" decoration-warning="days_to_expiry &lt;= 30 and days_to_expiry &gt; 0" decoration-danger="is_expired"/>
                    <field name="days_to_expiry" invisible="1"/>
                </list>
            </field>
        </record>

        <!-- Document Form View -->
        <record id="view_document_form" model="ir.ui.view">
            <field name="name">healthnusa.document.form</field>
            <field name="model">healthnusa.doctor.document</field>
            <field name="arch" type="xml">
                <form string="Doctor Document">
                    <header>
                        <button name="action_verify_document" type="object" string="Verify" class="btn-primary" invisible="is_verified == True"/>
                        <button name="action_unverify_document" type="object" string="Unverify" class="btn-secondary" invisible="is_verified == False"/>
                        <button name="action_download_document" type="object" string="Download" class="btn-secondary"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_download_document" type="object" class="oe_stat_button" icon="fa-download">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Download</span>
                                </div>
                            </button>
                        </div>
                        
                        <group>
                            <group name="basic_info" string="Document Information">
                                <field name="doctor_id" required="1"/>
                                <field name="name" required="1"/>
                                <field name="document_type" required="1"/>
                                <field name="active"/>
                            </group>
                            <group name="file_info" string="File Information">
                                <field name="file_data" filename="filename" required="1"/>
                                <field name="filename" required="1"/>
                                <field name="file_size_display" readonly="1"/>
                                <field name="file_type" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <group name="document_details" string="Document Details">
                                <field name="document_number"/>
                                <field name="issuing_authority"/>
                                <field name="issue_date"/>
                                <field name="expiry_date"/>
                            </group>
                            <group name="verification_info" string="Verification">
                                <field name="is_verified" readonly="1"/>
                                <field name="verified_by" readonly="1"/>
                                <field name="verified_date" readonly="1"/>
                                <field name="is_expired" readonly="1"/>
                                <field name="days_to_expiry" readonly="1"/>
                            </group>
                        </group>
                        
                        <group name="description" string="Description">
                            <field name="description" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Document Action -->
        <record id="action_doctor_document" model="ir.actions.act_window">
            <field name="name">Doctor Documents</field>
            <field name="res_model">healthnusa.doctor.document</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Upload your first doctor document
                </p>
                <p>
                    Manage doctor documents such as licenses, certificates, and other important files.
                </p>
            </field>
        </record>

    </data>
</odoo>