<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="healthnusa.Sidebar">
        <aside class="sidebar bg-white dark:bg-gray-800 flex flex-col transition-all duration-300 overflow-hidden shadow-lg border-r border-gray-200 dark:border-gray-700" t-att-class="sidebarClass">
            <!-- Sidebar Header -->
            <div class="p-6 pb-4">
                <div class="flex items-center mb-8">
                    <div class="w-10 h-10 bg-custom-blue rounded-lg flex-shrink-0 logo"></div>
                    <h1 class="text-xl font-bold text-gray-800 dark:text-white ml-3 sidebar-text" t-att-style="textDisplayStyle">Healthnusa</h1>
                </div>
            </div>

            <!-- Sidebar Navigation -->
            <nav class="flex-grow px-4 pb-4">
                <t t-foreach="['Service', 'Menu']" t-as="category" t-key="category">
                    <span class="text-gray-400 dark:text-gray-500 text-xs font-semibold uppercase mb-3 tracking-wider block sidebar-text" t-att-style="textDisplayStyle" t-out="category"/>
                    <div class="grid gap-2 mb-6 main-nav" t-att-class="mainNavClass">
                        <t t-foreach="props.apps" t-as="app" t-key="app.id">
                            <t t-if="app.category === category">
                                <a class="nav-btn rounded-lg text-center hover:bg-gray-100 dark:hover:bg-gray-700 transition-all duration-200" t-att-class="{'active': app.id === props.currentApp}" t-on-click="() => this.props.selectApp(app.id)">
                                    <span class="material-icons md-30" t-out="app.icon"/>
                                    <span class="text-xs sidebar-text" t-att-style="textDisplayStyle" t-out="app.name"/>
                                </a>
                            </t>
                        </t>
                    </div>
                </t>
            </nav>

            <!-- Sidebar Footer -->
            <div class="mt-auto p-4 border-t border-gray-200 dark:border-gray-600">
                <a class="btn-standard rounded-lg text-gray-600 dark:text-gray-300 hover:bg-red-50 dark:hover:bg-red-900/20 hover:text-red-600 dark:hover:text-red-400 transition-all duration-200 group px-4 logout-btn" href="#">
                    <span class="material-icons group-hover:text-red-600 dark:group-hover:text-red-400 flex-shrink-0">logout</span>
                    <span class="font-medium ml-3 sidebar-text" t-att-style="textDisplayStyle">Logout</span>
                </a>
            </div>
        </aside>
    </t>
</templates>