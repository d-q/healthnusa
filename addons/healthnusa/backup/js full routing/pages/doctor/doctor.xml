<templates xml:space="preserve">
    <t t-name="healthnusa.Doctor">
        <div class="sticky top-0 z-10 bg-white dark:bg-gray-800 p-6 rounded-t-2xl border-b border-gray-200 dark:border-gray-700">
            <!-- Top Controls Row -->
            <div class="flex justify-between items-center mb-6">
                <!-- Left Side - Add Button and Title -->
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-4">
                        <button t-on-click="addNewDoctor" class="btn-standard bg-custom-blue hover:bg-blue-600 text-white font-medium px-5 rounded-lg transition-colors duration-200 shadow-sm">
                            <span class="material-icons mr-2 text-lg">add</span> Add Doctor
                        </button>

                        <div class="flex flex-col justify-center h-10">
                            <h3 class="text-xl font-bold text-gray-800 dark:text-gray-100 leading-tight">Doctors</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
