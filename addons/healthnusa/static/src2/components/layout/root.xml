<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="healthnusa.Root">
        <div class="flex h-screen">
            <!-- Sidebar Component -->
            <Sidebar 
                isCollapsed="state.isSidebarCollapsed" 
                onToggle.bind="toggleSidebar"
            />

            <main class="flex-1 flex flex-col overflow-hidden dark:bg-gray-900 transition-colors duration-300">
                <!-- Header Component -->
                <Header 
                    onToggleSidebar.bind="toggleSidebar"
                    onToggleDarkMode.bind="toggleDarkMode"
                    isDarkMode="theme.state.isDarkMode"
                    isCollapsed="state.isSidebarCollapsed"
                />

                <!-- Breadcrumb Component -->
                <Breadcrumb />

                <!-- Scrollable Content Area -->
                <div class="flex-1 overflow-y-auto px-8 pb-8">
                    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow transition-colors duration-300">
                        
                        <!-- Data Controls Component -->
                        <DataControls 
                            title="'Doctors'"
                            onAdd.bind="onAddEmployee"
                            onSearch.bind="onSearchEmployees"
                            onSort.bind="onSortEmployees"
                            dataCount="'1-10 / 14'"
                        />

                        <!-- Data List Container -->
                        <div class="p-6 pt-2">
                            <div class="space-y-2 data-list-container">
                                <!-- Cards akan ditambahkan di sini oleh JavaScript atau komponen data list -->
                                <div class="text-center py-8 text-gray-500 dark:text-gray-400">
                                    <span class="material-icons text-4xl mb-2">people_outline</span>
                                    <p>No employees data loaded yet.</p>
                                    <p class="text-sm">Components are successfully split and organized!</p>
                                </div>
                            </div>

                            <!-- Pagination Container -->
                            <div class="flex justify-center items-center mt-6">
                                <div class="flex items-center space-x-1 pagination-buttons">
                                    <button class="pagination-btn border rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 text-gray-600 dark:text-gray-300 opacity-50 cursor-not-allowed">Previous</button>
                                    <button class="pagination-btn border rounded-lg bg-custom-blue text-white">1</button>
                                    <button class="pagination-btn border rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 text-gray-600 dark:text-gray-300">2</button>
                                    <button class="pagination-btn border rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 text-gray-600 dark:text-gray-300">Next</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </t>
</templates>