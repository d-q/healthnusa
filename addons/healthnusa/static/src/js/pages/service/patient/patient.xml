<templates xml:space="preserve">
    <t t-name="healthnusa.Patient">
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow transition-colors duration-300">
            <div class="sticky top-0 z-10 bg-white dark:bg-gray-800 p-6 rounded-t-2xl border-b border-gray-200 dark:border-gray-700">
                <!-- Top Controls Row -->
                <div class="flex justify-between items-center mb-6">
                    <!-- Left Side - Add Button and Title -->
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-4">
                            <button t-on-click="addNewPatient" class="btn-standard bg-custom-blue hover:bg-blue-600 text-white font-medium px-5 rounded-lg transition-colors duration-200 shadow-sm">
                                <span class="material-icons mr-2 text-lg">add</span> Add Patient
                            </button>
                        </div>
                    </div>

                    <!-- Center - Search Bar -->
                    <div class="flex items-center focus-within:ring-2 focus-within:ring-custom-blue border border-gray-300 dark:border-gray-600 rounded-lg transition-colors duration-300 min-w-80 w-96">
                        <div class="relative flex-1">
                            <span class="material-icons absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 dark:text-gray-500">search</span>
                            <input t-on-input="onSearchInput" class="pl-10 pr-4 py-2 border-0 rounded-l-lg focus:outline-none focus:ring-0 h-10 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400 transition-colors duration-300 w-full" placeholder="Search..." type="text" t-att-value="state.currentSearchTerm" />
                        </div>
                        <div class="relative border-l border-gray-300 dark:border-gray-600">
                            <button t-on-click="toggleSearchFilter" class="btn-standard px-3 rounded-r-lg bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 text-sm text-gray-600 dark:text-gray-300 transition-colors duration-300 focus:outline-none">
                                <span class="material-icons text-sm">view_list</span>
                            </button>

                            <!-- Search Filter Dropdown -->
                            <div class="search-filter-menu absolute hidden right-0 top-full mt-1 w-56 bg-white dark:bg-gray-700 rounded-md shadow-lg z-20 border border-gray-200 dark:border-gray-600 transition-colors duration-300">
                                <div class="px-4 py-3 border-b border-gray-200 dark:border-gray-600">
                                    <h3 class="text-sm font-semibold text-gray-700 dark:text-gray-200">Search in:</h3>
                                </div>
                                <div class="py-2">
                                    <label class="flex items-center px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 cursor-pointer transition-colors duration-200">
                                        <input type="radio" name="searchField" value="all" t-att-checked="state.currentSearchField === 'all'" t-on-change="onSearchFieldChange" class="mr-3 text-custom-blue"/>
                                        <span class="text-sm text-gray-700 dark:text-gray-200">All Fields</span>
                                    </label>
                                    <label class="flex items-center px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 cursor-pointer transition-colors duration-200">
                                        <input type="radio" name="searchField" value="name" t-att-checked="state.currentSearchField === 'name'" t-on-change="onSearchFieldChange" class="mr-3 text-custom-blue"/>
                                        <span class="text-sm text-gray-700 dark:text-gray-200">Name</span>
                                    </label>
                                    <label class="flex items-center px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 cursor-pointer transition-colors duration-200">
                                        <input type="radio" name="searchField" value="medical_record_number" t-att-checked="state.currentSearchField === 'medical_record_number'" t-on-change="onSearchFieldChange" class="mr-3 text-custom-blue"/>
                                        <span class="text-sm text-gray-700 dark:text-gray-200">MRN</span>
                                    </label>
                                    <label class="flex items-center px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 cursor-pointer transition-colors duration-200">
                                        <input type="radio" name="searchField" value="phone" t-att-checked="state.currentSearchField === 'phone'" t-on-change="onSearchFieldChange" class="mr-3 text-custom-blue"/>
                                        <span class="text-sm text-gray-700 dark:text-gray-200">Contact</span>
                                    </label>
                                    <label class="flex items-center px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 cursor-pointer transition-colors duration-200">
                                        <input type="radio" name="searchField" value="status" t-att-checked="state.currentSearchField === 'status'" t-on-change="onSearchFieldChange" class="mr-3 text-custom-blue"/>
                                        <span class="text-sm text-gray-700 dark:text-gray-200">Status</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Right Side - Data Count and Navigation Controls -->
                    <div class="flex items-center space-x-4">
                        <div class="text-sm text-gray-600 dark:text-gray-300 font-medium">
                            <t t-esc="paginationInfo"/>
                        </div>
                        <div class="flex items-center bg-gray-100 dark:bg-gray-600 rounded-lg p-1 transition-colors duration-300">
                            <button t-ref="prevNavBtn" t-on-click="prevPage" class="btn-standard rounded-lg w-10 transition-colors duration-300" t-att-class="getPrevButtonClass()" t-att-disabled="state.currentPage === 1">
                                <span class="material-icons" t-att-class="getPrevIconClass()">chevron_left</span>
                            </button>
                            <button t-ref="nextNavBtn" t-on-click="nextPage" class="btn-standard rounded-lg w-10 transition-colors duration-300" t-att-class="getNextButtonClass()" t-att-disabled="state.currentPage === totalPages || totalPages === 0">
                                <span class="material-icons" t-att-class="getNextIconClass()">chevron_right</span>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Table Header -->
                <div class="grid grid-cols-1 md:grid-cols-6 gap-4 items-center p-4 bg-gray-100 dark:bg-gray-600 rounded-lg font-semibold text-gray-600 dark:text-gray-300">
                    <div class="col-span-1 md:col-span-2 flex items-center space-x-4">
                        <input type="checkbox" class="w-4 h-4 text-custom-blue bg-gray-100 border-gray-300 rounded focus:ring-custom-blue dark:focus:ring-custom-blue dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
                        <button t-on-click="() => this.sortData('name')" class="sort-btn flex items-center space-x-1 hover:text-custom-blue transition-colors duration-200 group">
                            <span class="text-sm">Patient Information</span>
                            <span class="material-icons text-sm" t-esc="getSortIcon('name')"></span>
                        </button>
                    </div>
                    <div class="col-span-1">
                        <button t-on-click="() => this.sortData('phone')" class="sort-btn flex items-center space-x-1 hover:text-custom-blue transition-colors duration-200 group">
                            <span class="text-sm">Contact</span>
                            <span class="material-icons text-sm" t-esc="getSortIcon('phone')"></span>
                        </button>
                    </div>
                    <div class="col-span-1">
                        <button t-on-click="() => this.sortData('age')" class="sort-btn flex items-center space-x-1 hover:text-custom-blue transition-colors duration-200 group">
                            <span class="text-sm">Age/Gender</span>
                            <span class="material-icons text-sm" t-esc="getSortIcon('age')"></span>
                        </button>
                    </div>
                    <div class="col-span-1">
                        <button t-on-click="() => this.sortData('status')" class="sort-btn flex items-center space-x-1 hover:text-custom-blue transition-colors duration-200 group">
                            <span class="text-sm">Status</span>
                            <span class="material-icons text-sm" t-esc="getSortIcon('status')"></span>
                        </button>
                    </div>
                    <div class="col-span-1 text-center">
                        <span class="text-sm">Actions</span>
                    </div>
                </div>
            </div>

            <!-- Scrollable Data List Container -->
            <div class="p-6 pt-2">
                <div class="space-y-2 data-list-container">

                    <!-- Loop through current page data -->
                    <t t-foreach="currentPageData" t-as="patient" t-key="patient.id">
                        <div class="p-4 border border-gray-200 dark:border-gray-400 rounded-lg shadow-lg dark:shadow-gray-600/50 hover:shadow-xl dark:hover:shadow-gray-500/50 transition-shadow duration-200 grid grid-cols-1 md:grid-cols-6 gap-4 items-center">

                            <!-- Patient Information Column -->
                            <div class="flex items-center space-x-4 col-span-1 md:col-span-2">
                                <input type="checkbox" class="data-checkbox w-4 h-4 text-custom-blue bg-gray-100 border-gray-300 rounded focus:ring-custom-blue dark:focus:ring-custom-blue dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" t-att-data-id="patient.id" />
                                <img t-att-alt="patient.name" class="w-12 h-12 rounded-full" t-att-src="patient.image" />
                                <div>
                                    <p class="font-bold text-gray-800 dark:text-gray-100" t-esc="patient.name"></p>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">MRN: <t t-esc="patient.medical_record_number"/></p>
                                </div>
                            </div>

                            <!-- Contact Column -->
                            <div class="col-span-1">
                                <p class="text-gray-500 dark:text-gray-400 text-sm">Contact</p>
                                <p class="font-semibold text-gray-800 dark:text-gray-100" t-esc="patient.phone"></p>
                            </div>

                            <!-- Age/Gender Column -->
                            <div class="col-span-1">
                                <p class="text-gray-500 dark:text-gray-400 text-sm">Age/Gender</p>
                                <p class="font-semibold text-gray-800 dark:text-gray-100"><t t-esc="patient.age"/> / <t t-esc="patient.gender"/></p>
                            </div>

                            <!-- Status Column -->
                            <div class="col-span-1">
                                <span class="text-xs font-semibold px-3 py-1.5 rounded-full inline-flex items-center" t-att-class="getStatusClass(patient.status)">
                                    <span class="w-2 h-2 rounded-full mr-2" t-att-class="getStatusColor(patient.status)"></span>
                                    <t t-esc="patient.status"/>
                                </span>
                            </div>

                            <!-- Actions Column -->
                            <div class="flex items-center justify-end space-x-2 col-span-1">
                                <button t-on-click="() => this.viewPatient(patient.id)" class="btn-standard rounded-full hover:bg-gray-200 dark:hover:bg-gray-600 text-gray-500 dark:text-gray-200 hover:text-custom-blue w-10" title="View Details">
                                    <span class="material-icons">visibility</span>
                                </button>
                                <button t-on-click="() => this.editPatient(patient.id)" class="btn-standard rounded-full hover:bg-gray-200 dark:hover:bg-gray-600 text-gray-500 dark:text-gray-200 hover:text-custom-blue w-10" title="Edit">
                                    <span class="material-icons">edit</span>
                                </button>
                                <button t-on-click="() => this.showAdmissionForm(patient.id)" class="btn-standard rounded-full hover:bg-gray-200 dark:hover:bg-gray-600 text-gray-500 dark:text-gray-200 hover:text-custom-blue w-10" title="Admission">
                                    <span class="material-icons">local_hospital</span>
                                </button>
                                <div class="relative">
                                    <button t-on-click="toggleActionMenu" class="btn-standard rounded-full hover:bg-gray-200 dark:hover:bg-gray-600 text-gray-500 dark:text-gray-200 w-10 transition-colors duration-300" title="More Actions">
                                        <span class="material-icons">more_vert</span>
                                    </button>

                                    <!-- Dropdown Menu for Actions -->
                                    <div class="dropdown-menu absolute hidden right-0 mt-2 w-48 bg-white dark:bg-gray-700 rounded-md shadow-lg z-10 border border-gray-200 dark:border-gray-600 transition-colors duration-300">
                                        <a class="flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-600 h-10 transition-colors duration-200" href="#">
                                            <span class="material-icons text-gray-500 dark:text-gray-400 mr-3 text-base">print</span>Print
                                        </a>
                                        <a class="flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-600 h-10 transition-colors duration-200" href="#">
                                            <span class="material-icons text-gray-500 dark:text-gray-400 mr-3 text-base">file_download</span>Export
                                        </a>
                                        <hr class="border-gray-200 dark:border-gray-600 my-1"/>
                                        <a class="flex items-center px-4 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 h-10 transition-colors duration-200" href="#">
                                            <span class="material-icons text-red-500 dark:text-red-400 mr-3 text-base">delete_outline</span>Delete
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>

                    <!-- Empty State - No Data Found -->
                    <div t-if="currentPageData.length === 0" class="text-center py-12">
                        <div class="text-gray-400 dark:text-gray-500 text-lg mb-4">
                            <span class="material-icons text-6xl opacity-50">search_off</span>
                        </div>
                        <h3 class="text-lg font-semibold text-gray-600 dark:text-gray-300 mb-2">No patients found</h3>
                        <p class="text-gray-500 dark:text-gray-400">
                            <span t-if="state.currentSearchTerm">No patients match your search criteria for "<t t-esc="state.currentSearchTerm"/>".
                            </span>
                            <span t-else="">Try adjusting your search terms or filters.</span>
                        </p>
                        <button t-if="state.currentSearchTerm" t-on-click="clearSearch" class="mt-4 btn-standard bg-custom-blue hover:bg-blue-600 text-white px-4 py-2 rounded-lg transition-colors duration-200">Clear Search</button>
                    </div>
                </div>

                <!-- Fixed Pagination Container -->
                <div class="flex justify-center items-center mt-6" t-if="state.filteredItems.length > 0">
                    <div class="flex items-center space-x-1 pagination-buttons">
                        <t t-foreach="paginationButtons" t-as="button" t-key="button_index">

                            <!-- Previous Button -->
                            <button t-if="button.type === 'prev'" t-on-click="prevPage" class="pagination-btn border rounded-lg px-3 py-2 text-sm font-medium transition-colors duration-200" t-att-class="getPaginationButtonClass(button)" t-att-disabled="button.disabled">
                                <span class="flex items-center space-x-1">
                                    <span class="material-icons text-sm">chevron_left</span>
                                    <span t-esc="button.text"/>
                                </span>
                            </button>

                            <!-- Page Number Buttons -->
                            <button t-elif="button.type === 'page'" t-on-click="() => this.goToPage(button.page)" class="pagination-btn border rounded-lg px-3 py-2 text-sm font-medium min-w-[40px] transition-colors duration-200" t-att-class="getPaginationButtonClass(button)">
                                <t t-esc="button.text"/>
                            </button>

                            <!-- Next Button -->
                            <button t-elif="button.type === 'next'" t-on-click="nextPage" class="pagination-btn border rounded-lg px-3 py-2 text-sm font-medium transition-colors duration-200" t-att-class="getPaginationButtonClass(button)" t-att-disabled="button.disabled">
                                <span class="flex items-center space-x-1">
                                    <span t-esc="button.text"/>
                                    <span class="material-icons text-sm">chevron_right</span>
                                </span>
                            </button>
                        </t>
                    </div>
                </div>

                <!-- Pagination Info for Empty Results -->
                <div t-if="state.filteredItems.length === 0 and !state.currentSearchTerm" class="text-center py-6">
                    <p class="text-gray-500 dark:text-gray-400 text-sm">No data available. Please add some patients to get started.</p>
                </div>
            </div>
        </div>

        <!-- Admission Modal -->
        <div t-if="state.showAdmissionModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-2xl w-full mx-4 max-h-[90vh] overflow-y-auto">
                <!-- Modal Header -->
                <div class="flex items-center justify-between p-6 border-b border-gray-200 dark:border-gray-700">
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">Patient Admission</h3>
                        <p class="text-sm text-gray-500 dark:text-gray-400 mt-1" t-if="selectedPatient">
                            <t t-esc="selectedPatient.name"/> (MRN: <t t-esc="selectedPatient.medical_record_number"/>)
                        </p>
                    </div>
                    <button t-on-click="closeAdmissionModal" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                        <span class="material-icons">close</span>
                    </button>
                </div>

                <!-- Modal Body -->
                <form class="p-6 space-y-6">
                    <!-- Date and Time Row -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Admission Date</label>
                            <input 
                                type="date" 
                                t-att-value="state.admissionForm.admission_date"
                                t-on-change="(e) => this.onAdmissionFormChange('admission_date', e.target.value)"
                                class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-custom-blue focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
                                required="true"
                            />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Admission Time</label>
                            <input 
                                type="time" 
                                t-att-value="state.admissionForm.admission_time"
                                t-on-change="(e) => this.onAdmissionFormChange('admission_time', e.target.value)"
                                class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-custom-blue focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
                                required="true"
                            />
                        </div>
                    </div>

                    <!-- Department and Doctor Row -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Department</label>
                            <select 
                                t-att-value="state.admissionForm.department"
                                t-on-change="(e) => this.onAdmissionFormChange('department', e.target.value)"
                                class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-custom-blue focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
                                required="true"
                            >
                                <option value="">Select Department</option>
                                <option value="Emergency">Emergency</option>
                                <option value="Cardiology">Cardiology</option>
                                <option value="Neurology">Neurology</option>
                                <option value="Orthopedics">Orthopedics</option>
                                <option value="Pediatrics">Pediatrics</option>
                                <option value="Internal Medicine">Internal Medicine</option>
                                <option value="Surgery">Surgery</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Attending Doctor</label>
                            <input 
                                type="text" 
                                t-att-value="state.admissionForm.doctor"
                                t-on-input="(e) => this.onAdmissionFormChange('doctor', e.target.value)"
                                class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-custom-blue focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
                                placeholder="Dr. Smith"
                                required="true"
                            />
                        </div>
                    </div>

                    <!-- Room and Bed Row - Only show for Inpatient and Emergency -->
                    <div t-if="state.admissionForm.admission_type === 'Inpatient' || state.admissionForm.admission_type === 'Emergency'" class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Room Number</label>
                            <input 
                                type="text" 
                                t-att-value="state.admissionForm.room_number"
                                t-on-input="(e) => this.onAdmissionFormChange('room_number', e.target.value)"
                                class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-custom-blue focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
                                placeholder="101A"
                            />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Bed Number</label>
                            <input 
                                type="text" 
                                t-att-value="state.admissionForm.bed_number"
                                t-on-input="(e) => this.onAdmissionFormChange('bed_number', e.target.value)"
                                class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-custom-blue focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
                                placeholder="1"
                            />
                        </div>
                    </div>

                    <!-- Admission Type and Insurance Row -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Admission Type</label>
                            <select 
                                t-att-value="state.admissionForm.admission_type"
                                t-on-change="(e) => this.onAdmissionFormChange('admission_type', e.target.value)"
                                class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-custom-blue focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
                            >
                                <option value="Outpatient">Outpatient</option>
                                <option value="Inpatient">Inpatient</option>
                                <option value="Emergency">Emergency</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Insurance</label>
                            <select 
                                t-att-value="state.admissionForm.insurance"
                                t-on-change="(e) => this.onAdmissionFormChange('insurance', e.target.value)"
                                class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-custom-blue focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
                                required="true"
                            >
                                <option value="">Select Insurance</option>
                                <option value="BPJS Kesehatan">BPJS Kesehatan</option>
                                <option value="BPJS Ketenagakerjaan">BPJS Ketenagakerjaan</option>
                                <option value="Private Insurance">Private Insurance</option>
                                <option value="Cash">Cash</option>
                                <option value="Company Insurance">Company Insurance</option>
                            </select>
                        </div>
                    </div>

                    <!-- Chief Complaint -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Chief Complaint</label>
                        <textarea 
                            t-att-value="state.admissionForm.chief_complaint"
                            t-on-input="(e) => this.onAdmissionFormChange('chief_complaint', e.target.value)"
                            class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-custom-blue focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
                            rows="3"
                            placeholder="Patient's primary complaint..."
                        ></textarea>
                    </div>

                    <!-- Diagnosis -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Initial Diagnosis</label>
                        <textarea 
                            t-att-value="state.admissionForm.diagnosis"
                            t-on-input="(e) => this.onAdmissionFormChange('diagnosis', e.target.value)"
                            class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-custom-blue focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
                            rows="3"
                            placeholder="Initial diagnosis or suspected condition..."
                        ></textarea>
                    </div>

                    <!-- Notes -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Additional Notes</label>
                        <textarea 
                            t-att-value="state.admissionForm.notes"
                            t-on-input="(e) => this.onAdmissionFormChange('notes', e.target.value)"
                            class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-custom-blue focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
                            rows="3"
                            placeholder="Any additional notes or special instructions..."
                        ></textarea>
                    </div>
                </form>

                <!-- Modal Footer -->
                <div class="flex items-center justify-end space-x-3 p-6 border-t border-gray-200 dark:border-gray-700">
                    <button 
                        t-on-click="closeAdmissionModal" 
                        type="button" 
                        class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-200"
                    >
                        Cancel
                    </button>
                    <button 
                        t-on-click="submitAdmissionForm" 
                        type="button" 
                        class="px-4 py-2 text-sm font-medium text-white bg-custom-blue hover:bg-blue-600 rounded-lg transition-colors duration-200"
                    >
                        Create Admission
                    </button>
                </div>
            </div>
        </div>
    </t>
</templates>
