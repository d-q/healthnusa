<templates xml:space="preserve">
    <t t-name="healthnusa.InvoiceDetail">
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow transition-colors duration-300">
            <!-- Loading State -->
            <div t-if="state.loading" class="p-8 text-center">
                <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto mb-4"></div>
                <p class="text-gray-600 dark:text-gray-400">Loading invoice details...</p>
            </div>

            <!-- Content -->
            <div t-if="!state.loading and state.invoice" class="h-full">
                <!-- Header -->
                <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-4">
                            <button t-on-click="goBack" class="flex items-center justify-center w-10 h-10 bg-gray-100 dark:bg-gray-700 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors duration-200">
                                <span class="material-icons text-gray-600 dark:text-gray-300">arrow_back</span>
                            </button>
                            <div>
                                <h2 class="text-2xl font-bold text-gray-800 dark:text-white">Invoice Detail</h2>
                                <p class="text-sm text-gray-500 dark:text-gray-400">View invoice details</p>
                            </div>
                        </div>
                        <div class="flex items-center space-x-3">
                            <div class="flex items-center space-x-2 bg-gray-100 dark:bg-gray-700 px-3 py-2 rounded-lg">
                                <span class="material-icons text-gray-600 dark:text-gray-300 text-sm">receipt</span>
                                <span class="text-sm font-medium text-gray-700 dark:text-gray-200" t-esc="state.invoice.invoiceId"></span>
                            </div>
                            <span class="text-xs font-semibold px-3 py-1.5 rounded-full inline-flex items-center" t-att-class="getStatusClass(state.invoice.status)">
                                <span class="w-2 h-2 rounded-full mr-2" t-att-class="getStatusColor(state.invoice.status)"></span>
                                <t t-esc="state.invoice.status"/>
                            </span>
                            <button t-on-click="editInvoice" class="flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200">
                                <span class="material-icons mr-2 text-sm">edit</span>
                                Edit
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Form Content - Following exact adjustment_detail layout -->
                <div class="p-8">
                    <!-- Invoice Header -->
                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-8">
                        <!-- Invoice Info -->
                        <div class="space-y-6">
                            <div>
                                <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-3">Invoice Details</h3>
                                <div class="grid grid-cols-2 gap-4">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Invoice ID</label>
                                        <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="state.invoice.invoiceId"></p>
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Date</label>
                                        <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="formatDate(state.invoice.date)"></p>
                                    </div>
                                </div>
                            </div>

                            <div>
                                <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-3">Patient &amp; Medical Info</h3>
                                <div class="space-y-4">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Patient</label>
                                        <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="state.invoice.patient"></p>
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Patient ID</label>
                                        <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="state.invoice.patientId"></p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Invoice Authority & Medical Details -->
                        <div>
                            <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">Medical Authorization</h3>
                            <div class="space-y-4 mb-6">
                                <div>
                                    <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Invoice Type</label>
                                    <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="state.invoice.invoiceType"></p>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Doctor</label>
                                    <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="state.invoice.doctor"></p>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Department</label>
                                    <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="state.invoice.department"></p>
                                </div>
                            </div>

                            <!-- Additional Information Toggle -->
                            <div class="text-blue-600 text-sm font-medium flex items-center mb-4">
                                <span>Additional information</span>
                                <span class="material-icons text-sm ml-1">expand_less</span>
                            </div>

                            <!-- Additional Fields -->
                            <div class="space-y-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Due Date</label>
                                    <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="formatDate(state.invoice.dueDate)"></p>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Payment Method</label>
                                    <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="state.invoice.paymentMethod"></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Services Section -->
                    <div class="border-t border-gray-200 dark:border-gray-600 pt-8">
                        <div class="flex justify-between items-center mb-6">
                            <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100">Services &amp; Items</h3>
                        </div>

                        <!-- Services Table -->
                        <div class="overflow-hidden border border-gray-200 dark:border-gray-600 rounded-lg">
                            <table class="w-full">
                                <thead class="bg-gray-50 dark:bg-gray-700">
                                    <tr>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">#</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Service Code</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Description</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Quantity</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Unit Price</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Total Price</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-600">
                                    <t t-foreach="state.invoice.services" t-as="service" t-key="service.id">
                                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                                            <td class="px-4 py-3 text-sm text-gray-500 dark:text-gray-400" t-esc="service_index + 1"></td>
                                            <td class="px-4 py-3 text-sm font-medium text-gray-800 dark:text-gray-100" t-esc="service.serviceCode"></td>
                                            <td class="px-4 py-3 text-sm text-gray-800 dark:text-gray-100" t-esc="service.description"></td>
                                            <td class="px-4 py-3 text-sm text-gray-800 dark:text-gray-100" t-esc="service.quantity"></td>
                                            <td class="px-4 py-3 text-sm text-gray-800 dark:text-gray-100" t-esc="formatCurrency(service.unitPrice)"></td>
                                            <td class="px-4 py-3 text-sm font-medium text-gray-800 dark:text-gray-100" t-esc="formatCurrency(service.totalPrice)"></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Notes and Summary -->
                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mt-8 pt-8 border-t border-gray-200 dark:border-gray-600">
                        <!-- Notes -->
                        <div>
                            <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-2">Invoice Notes</label>
                            <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
                                <p class="text-gray-800 dark:text-gray-100 leading-relaxed" t-esc="state.invoice.notes"></p>
                            </div>
                        </div>

                        <!-- Summary -->
                        <div>
                            <div class="bg-gray-50 dark:bg-gray-700 p-6 rounded-lg">
                                <h4 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">Invoice Summary</h4>
                                <div class="space-y-3">
                                    <div class="flex justify-between">
                                        <span class="text-gray-600 dark:text-gray-300">Total Services:</span>
                                        <span class="font-medium text-gray-800 dark:text-gray-100" t-esc="totalServices"></span>
                                    </div>
                                    <div class="flex justify-between">
                                        <span class="text-gray-600 dark:text-gray-300">Subtotal:</span>
                                        <span class="font-medium text-gray-800 dark:text-gray-100" t-esc="formatCurrency(subtotal)"></span>
                                    </div>
                                    <div class="flex justify-between">
                                        <span class="text-gray-600 dark:text-gray-300">Tax (10%):</span>
                                        <span class="font-medium text-gray-800 dark:text-gray-100" t-esc="formatCurrency(taxAmount)"></span>
                                    </div>
                                    <div class="border-t border-gray-300 dark:border-gray-500 pt-3">
                                        <div class="flex justify-between">
                                            <span class="text-lg font-bold text-gray-800 dark:text-gray-100">Total Amount:</span>
                                            <span class="text-lg font-bold text-green-600 dark:text-green-400" t-esc="formatCurrency(totalAmount)"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex justify-end space-x-4 mt-8 pt-6 border-t border-gray-200 dark:border-gray-600">
                        <button t-on-click="printInvoice" class="px-6 py-3 bg-gray-200 dark:bg-gray-600 text-gray-700 dark:text-gray-200 font-medium rounded-lg hover:bg-gray-300 dark:hover:bg-gray-500 transition-colors">
                            <span class="material-icons mr-2 text-sm">print</span>
                            Print
                        </button>
                        <button t-on-click="downloadInvoice" class="px-6 py-3 bg-gray-200 dark:bg-gray-600 text-gray-700 dark:text-gray-200 font-medium rounded-lg hover:bg-gray-300 dark:hover:bg-gray-500 transition-colors">
                            <span class="material-icons mr-2 text-sm">file_download</span>
                            Export
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>