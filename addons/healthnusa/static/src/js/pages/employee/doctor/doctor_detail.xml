<templates xml:space="preserve">
    <t t-name="healthnusa.DoctorDetail">
        <div class="flex gap-8">
            <!-- Left Column - Doctor Profile -->
            <div class="w-1/3">
                <div class="bg-white dark:bg-gray-800 p-6 rounded-2xl shadow transition-colors duration-300 flex flex-col items-center">
                    <div class="relative mb-4">
                        <img alt="Doctor profile picture" class="w-36 h-36 rounded-full object-cover" t-att-src="state.doctor.profileImage" />
                    </div>
                    <h2 class="text-xl font-bold text-gray-800 dark:text-gray-100" t-esc="state.doctor.name"/>
                    <p class="text-custom-blue mb-6" t-esc="state.doctor.specialization"/>
                    <div class="w-full space-y-4 text-sm">
                        <div class="flex items-start">
                            <span class="material-icons text-gray-500 dark:text-gray-400 mr-3 mt-1">verified_user</span>
                            <div class="w-full">
                                <p class="text-gray-600 dark:text-gray-300 mb-2 font-medium">Medical License Number</p>
                                <p class="font-bold text-gray-800 dark:text-gray-100" t-esc="state.doctor.medicalLicenseNumber"/>
                            </div>
                        </div>
                        <div class="flex items-start">
                            <span class="material-icons text-gray-500 dark:text-gray-400 mr-3 mt-1">workspace_premium</span>
                            <div class="w-full">
                                <p class="text-gray-600 dark:text-gray-300 mb-2 font-medium">Practice License Number</p>
                                <p class="font-bold text-gray-800 dark:text-gray-100" t-esc="state.doctor.practiceLicenseNumber"/>
                            </div>
                        </div>
                        <div class="flex items-start">
                            <span class="material-icons text-gray-500 dark:text-gray-400 mr-3 mt-1">schedule</span>
                            <div class="w-full">
                                <p class="text-gray-600 dark:text-gray-300 mb-2 font-medium" t-esc="'Schedule &amp; Practice Hours'"/>
                                <div class="text-gray-800 dark:text-gray-100 space-y-1.5">
                                    <t t-foreach="state.schedule" t-as="day" t-key="day.day">
                                        <div class="flex">
                                            <div class="font-bold w-[30%]" t-esc="day.day + ':'"/>
                                            <div class="w-[70%] flex flex-wrap gap-1">
                                                <t t-if="day.sessions.length > 0">
                                                    <t t-foreach="day.sessions" t-as="session" t-key="session.time">
                                                        <span t-att-class="'bg-' + session.color + '-100 dark:bg-' + session.color + '-900 text-' + session.color + '-800 dark:text-' + session.color + '-200 text-xs font-medium px-2 py-1 rounded-full'" t-esc="session.time"/>
                                                    </t>
                                                </t>
                                                <t t-else="">
                                                    <span class="text-gray-500 dark:text-gray-400">Off</span>
                                                </t>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>
                        <div class="flex items-start pt-2">
                            <span class="material-icons text-gray-500 dark:text-gray-400 mr-3 mt-1">work_outline</span>
                            <div class="w-full">
                                <p class="text-gray-600 dark:text-gray-300 font-medium mb-1.5">Duty Status</p>
                                <span class="bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 text-xs font-medium px-2 py-1 rounded-full" t-esc="state.doctor.dutyStatus"/>
                            </div>
                        </div>
                    </div>
                    <div class="w-full mt-8 space-y-2">
                        <button class="w-full bg-custom-blue hover:bg-blue-600 text-white py-3 rounded-lg font-semibold transition duration-300 flex items-center justify-center space-x-2">
                            <span class="material-icons">edit</span>
                            <span>Edit Doctor Details</span>
                        </button>
                        <button class="w-full bg-red-500 hover:bg-red-600 text-white py-3 rounded-lg font-semibold transition duration-300 flex items-center justify-center space-x-2">
                            <span class="material-icons">delete</span>
                            <span>Delete Doctor</span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Right Column - Doctor Details -->
            <div class="w-2/3">
                <div class="bg-white dark:bg-gray-800 rounded-2xl shadow transition-colors duration-300">
                    <div class="border-b border-gray-200 dark:border-gray-700">
                        <nav class="flex space-x-8 px-6">
                            <a class="tab-nav py-4 text-custom-blue border-b-2 border-custom-blue font-semibold flex items-center space-x-2" href="#" data-tab="doctor-details">
                                <span class="material-icons text-lg">person</span>
                                <span>Doctor Details</span>
                            </a>
                            <a class="tab-nav py-4 text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 flex items-center space-x-2" href="#" data-tab="medical-license">
                                <span class="material-icons text-lg">verified_user</span>
                                <span>Medical License</span>
                            </a>
                            <a class="tab-nav py-4 text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 flex items-center space-x-2" href="#" data-tab="appointments">
                                <span class="material-icons text-lg">event_note</span>
                                <span>Appointments</span>
                            </a>
                        </nav>
                    </div>

                    <!-- Doctor Details Tab -->
                    <div id="doctor-details" class="tab-content p-6">
                        <h3 class="text-lg font-bold text-gray-800 dark:text-gray-100 mb-4">Personal Information</h3>
                        <div class="grid grid-cols-2 gap-6 text-sm">
                            <div>
                                <label class="block text-gray-500 dark:text-gray-400 mb-1">Full Name</label>
                                <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="state.doctor.name"/>
                            </div>
                            <div>
                                <label class="block text-gray-500 dark:text-gray-400 mb-1">Gender</label>
                                <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="state.doctor.gender"/>
                            </div>
                            <div>
                                <label class="block text-gray-500 dark:text-gray-400 mb-1">Date of Birth</label>
                                <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="state.doctor.dateOfBirth"/>
                            </div>
                            <div>
                                <label class="block text-gray-500 dark:text-gray-400 mb-1">Phone</label>
                                <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="state.doctor.phone"/>
                            </div>
                            <div>
                                <label class="block text-gray-500 dark:text-gray-400 mb-1">Email</label>
                                <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="state.doctor.email"/>
                            </div>
                            <div>
                                <label class="block text-gray-500 dark:text-gray-400 mb-1">Specialization</label>
                                <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="state.doctor.fullSpecialization"/>
                            </div>
                            <div class="col-span-2">
                                <label class="block text-gray-500 dark:text-gray-400 mb-1">Address</label>
                                <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="state.doctor.address"/>
                            </div>
                        </div>
                        <h3 class="text-lg font-bold text-gray-800 dark:text-gray-100 mt-8 mb-4">Educational Background</h3>
                        <div class="overflow-x-auto">
                            <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                                <thead class="text-xs text-gray-700 dark:text-gray-300 uppercase bg-gray-50 dark:bg-gray-700">
                                    <tr>
                                        <th class="px-6 py-3" scope="col">Degree</th>
                                        <th class="px-6 py-3" scope="col">Institution</th>
                                        <th class="px-6 py-3" scope="col">Year</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="state.education" t-as="edu" t-key="edu.degree">
                                        <tr t-att-class="'bg-white dark:bg-gray-800' + (edu_last ? '' : ' border-b border-gray-200 dark:border-gray-700')">
                                            <td class="px-6 py-4 font-medium text-gray-900 dark:text-gray-100" t-esc="edu.degree"/>
                                            <td class="px-6 py-4" t-esc="edu.institution"/>
                                            <td class="px-6 py-4" t-esc="edu.year"/>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                        <h3 class="text-lg font-bold text-gray-800 dark:text-gray-100 mt-8 mb-4">Work Experience</h3>
                        <div class="overflow-x-auto">
                            <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                                <thead class="text-xs text-gray-700 dark:text-gray-300 uppercase bg-gray-50 dark:bg-gray-700">
                                    <tr>
                                        <th class="px-6 py-3" scope="col">Position</th>
                                        <th class="px-6 py-3" scope="col">Institution</th>
                                        <th class="px-6 py-3" scope="col">Period</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="state.workExperience" t-as="work" t-key="work.position">
                                        <tr t-att-class="'bg-white dark:bg-gray-800' + (work_last ? '' : ' border-b border-gray-200 dark:border-gray-700')">
                                            <td class="px-6 py-4 font-medium text-gray-900 dark:text-gray-100" t-esc="work.position"/>
                                            <td class="px-6 py-4" t-esc="work.institution"/>
                                            <td class="px-6 py-4" t-esc="work.period"/>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Medical License Tab -->
                    <div id="medical-license" class="tab-content p-6 hidden">
                        <h3 class="text-lg font-bold text-gray-800 dark:text-gray-100 mb-4">Medical Licenses &amp; Certifications</h3>
                        <div class="space-y-6">
                            <t t-foreach="state.medicalLicenses" t-as="license" t-key="license.type">
                                <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
                                    <div class="flex items-start justify-between mb-3">
                                        <div class="flex items-center space-x-3">
                                            <span t-att-class="'material-icons text-' + license.iconColor + '-600 dark:text-' + license.iconColor + '-400'" t-esc="license.icon"/>
                                            <div>
                                                <h4 class="font-semibold text-gray-800 dark:text-gray-100" t-esc="license.name"/>
                                                <p class="text-sm text-gray-600 dark:text-gray-300" t-esc="license.description"/>
                                            </div>
                                        </div>
                                        <span class="bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 text-xs font-medium px-2 py-1 rounded-full" t-esc="license.status"/>
                                    </div>
                                    <div class="grid grid-cols-2 gap-4 text-sm">
                                        <t t-if="license.type == 'STR'">
                                            <div>
                                                <label class="block text-gray-500 dark:text-gray-400 mb-1">License Number</label>
                                                <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="license.licenseNumber"/>
                                            </div>
                                            <div>
                                                <label class="block text-gray-500 dark:text-gray-400 mb-1">Issue Date</label>
                                                <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="license.issueDate"/>
                                            </div>
                                            <div>
                                                <label class="block text-gray-500 dark:text-gray-400 mb-1">Expiry Date</label>
                                                <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="license.expiryDate"/>
                                            </div>
                                            <div>
                                                <label class="block text-gray-500 dark:text-gray-400 mb-1">Issuing Authority</label>
                                                <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="license.issuingAuthority"/>
                                            </div>
                                        </t>
                                        <t t-elif="license.type == 'SIP'">
                                            <div>
                                                <label class="block text-gray-500 dark:text-gray-400 mb-1">License Number</label>
                                                <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="license.licenseNumber"/>
                                            </div>
                                            <div>
                                                <label class="block text-gray-500 dark:text-gray-400 mb-1">Issue Date</label>
                                                <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="license.issueDate"/>
                                            </div>
                                            <div>
                                                <label class="block text-gray-500 dark:text-gray-400 mb-1">Expiry Date</label>
                                                <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="license.expiryDate"/>
                                            </div>
                                            <div>
                                                <label class="block text-gray-500 dark:text-gray-400 mb-1">Practice Location</label>
                                                <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="license.practiceLocation"/>
                                            </div>
                                        </t>
                                        <t t-elif="license.type == 'SPECIALIST'">
                                            <div>
                                                <label class="block text-gray-500 dark:text-gray-400 mb-1">Certificate Number</label>
                                                <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="license.licenseNumber"/>
                                            </div>
                                            <div>
                                                <label class="block text-gray-500 dark:text-gray-400 mb-1">Completion Date</label>
                                                <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="license.completionDate"/>
                                            </div>
                                            <div>
                                                <label class="block text-gray-500 dark:text-gray-400 mb-1">Institution</label>
                                                <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="license.institution"/>
                                            </div>
                                            <div>
                                                <label class="block text-gray-500 dark:text-gray-400 mb-1">Specialty</label>
                                                <p class="text-gray-800 dark:text-gray-100 font-medium" t-esc="license.specialty"/>
                                            </div>
                                        </t>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>

                    <!-- Appointments Tab -->
                    <div id="appointments" class="tab-content p-6 hidden">
                        <div class="flex justify-between items-center mb-6">
                            <h3 class="text-lg font-bold text-gray-800 dark:text-gray-100">Upcoming Appointments</h3>
                            <div class="flex items-center space-x-2">
                                <span class="text-sm text-gray-600 dark:text-gray-300" t-esc="'Today: ' + state.currentDate"/>
                                <span class="bg-custom-blue text-white text-xs font-medium px-2 py-1 rounded-full" t-esc="state.totalAppointments + ' appointments'"/>
                            </div>
                        </div>

                        <div class="space-y-4">
                            <t t-foreach="state.appointments" t-as="appointment" t-key="appointment.id">
                                <div class="border border-gray-200 dark:border-gray-600 rounded-lg p-4 hover:shadow-md transition-shadow">
                                    <div class="flex items-center justify-between">
                                        <div class="flex items-center space-x-4">
                                            <div class="w-12 h-12 bg-gray-200 dark:bg-gray-600 rounded-full flex items-center justify-center">
                                                <span class="material-icons text-gray-600 dark:text-gray-300">person</span>
                                            </div>
                                            <div>
                                                <h4 class="font-semibold text-gray-800 dark:text-gray-100" t-esc="appointment.patientName"/>
                                                <p class="text-sm text-gray-600 dark:text-gray-300" t-esc="'ID: ' + appointment.id"/>
                                                <p class="text-sm text-gray-500 dark:text-gray-400" t-esc="appointment.reason"/>
                                            </div>
                                        </div>
                                        <div class="text-right">
                                            <div class="flex items-center space-x-2 mb-1">
                                                <span class="material-icons text-sm text-gray-500">schedule</span>
                                                <span class="text-sm font-medium text-gray-800 dark:text-gray-100" t-esc="appointment.time"/>
                                            </div>
                                            <span t-att-class="'bg-' + appointment.statusColor + '-100 dark:bg-' + appointment.statusColor + '-900 text-' + appointment.statusColor + '-800 dark:text-' + appointment.statusColor + '-200 text-xs font-medium px-2 py-1 rounded-full'" t-esc="appointment.status"/>
                                        </div>
                                    </div>
                                </div>
                            </t>

                            <!-- View More Button -->
                            <div class="text-center pt-4">
                                <button class="bg-custom-blue hover:bg-blue-600 text-white px-6 py-2 rounded-lg text-sm font-medium transition-colors duration-200">
                                            View All Appointments
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>